---
import { Icon } from "astro-icon";

export interface Props {
  categorias: Array<{
    id: string;
    nombre: string;
    icono: string;
  }>;
}

const { categorias } = Astro.props;
---

<!-- src/components/CategoryNav.astro -->
<div class="container mx-auto px-4">
  <ul class="flex justify-center space-x-8 py-2">
    {
      categorias.map((categoria) => (
        <li>
          <a
            href={`/productos/${categoria.id}`}
            class="flex items-center space-x-2 text-sm text-gray-300 hover:text-purple-400 transition duration-200"
          >
            <Icon name={categoria.icono} class="w-4 h-4" />
            <span>{categoria.nombre}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>
