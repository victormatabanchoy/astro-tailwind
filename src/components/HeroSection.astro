<!-- src/components/HeroSection.astro -->
<section class="relative bg-black text-white overflow-hidden">
  <!-- Efectos de fondo -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-purple-900/20 to-blue-900/40"
  >
  </div>
  <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-20">
  </div>

  <!-- Círculos de luz -->
  <div
    class="absolute top-20 left-20 w-60 h-60 bg-purple-600 rounded-full filter blur-3xl opacity-20 animate-pulse"
  >
  </div>
  <div
    class="absolute bottom-10 right-10 w-80 h-80 bg-blue-600 rounded-full filter blur-3xl opacity-20 animate-pulse"
    style="animation-delay: 1s;"
  >
  </div>

  <!-- Contenido -->
  <div class="container mx-auto px-4 py-20 md:py-32 relative z-10">
    <div class="flex flex-col md:flex-row items-center">
      <!-- Texto -->
      <div class="md:w-1/2 space-y-6">
        <h1 class="text-4xl md:text-6xl font-bold">
          <span class="block">El Futuro de la</span>
          <span
            class="bg-gradient-to-r from-purple-400 to-blue-500 bg-clip-text text-transparent"
            >Tecnología</span
          >
          <span class="block">Está Aquí</span>
        </h1>
        <p class="text-gray-300 text-xl max-w-md">
          Descubre los dispositivos más avanzados con diseños y de última
          tecnología.
        </p>
        <div class="flex space-x-4">
          <a
            href="/productos/celulares"
            class="px-8 py-3 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full font-medium hover:opacity-90 transition duration-200 transform hover:scale-105"
          >
            Explorar
          </a>
          <a
            href="#destacados"
            class="px-8 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full font-medium hover:bg-white/20 transition duration-200"
          >
            Destacados
          </a>
        </div>
      </div>

      <!-- Carrusel 3D -->
      <div
        class="md:w-1/2 mt-10 md:mt-0 relative flex justify-center items-center h-[350px]"
      >
        <div
          class="relative w-[400px] h-[500px] [transform-style:preserve-3d] animate-spin-slower"
        >
          <img
            src="/images/img1.png"
            class="absolute w-[200px] h-[200px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(0deg)_translateZ(250px)]"
          />
          <img
            src="/images/img2.png"
            class="absolute w-[200px] h-[200px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(51deg)_translateZ(250px)]"
          />
          <img
            src="/images/img3.png"
            class="absolute w-[200px] h-[200px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(102deg)_translateZ(250px)]"
          />
          <img
            src="/images/img4.png"
            class="absolute w-[200px] h-[200px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(154deg)_translateZ(250px)]"
          />
          <img
            src="/images/img5.png"
            class="absolute w-[200px] h-[200px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(205deg)_translateZ(250px)]"
          />
          <img
            src="/images/img6.png"
            class="absolute w-[200px] h-[200px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(257deg)_translateZ(250px)]"
          />
          <img
            src="/images/img7.png"
            class="absolute w-[160px] h-[160px] object-cover rounded-xl drop-shadow-2xl
               left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
               [transform:rotateY(308deg)_translateZ(250px)]"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spin-slower {
    from {
      transform: rotateY(0deg);
    }
    to {
      transform: rotateY(360deg);
    }
  }

  .animate-spin-slower {
    animation: spin-slower 20s linear infinite;
  }
</style>
